<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container-fluid">
      <div class="col-lg-3 d-flex justify-content-center align-items-center">
        <a href="/">
        <img src="/images/logo.png" class="img-fluid" alt="" />
      </a>
      <a  class="linkHome" href="/">
        <h1 class="text-white">Foxter</h1>
      </a>
      
      </div>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="col-lg-8">

          <form  action="/search" method="GET"  class="d-flex">
            <input
              class="form-control mr-0"
              type="search"
              placeholder="Buscar..."
              aria-label="Search"
              name="keywords"
            />
            <button class="searchButton" type="submit"><i class="fa fa-search"></i></button>
          </form>
        </div>

           
         

        <div class="col-lg-3">
          <div class="iconos d-flex justify-content-end">
            <% if(locals.isLogged) { %>   
            <li class="nav-item dropdown ">
              <a class="nav-link dropdown-toggle p-0 px-3 text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                <%= locals.userLogged.name %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/user/login">Mi Perfil</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/user/logout">Logout</a>
              </div>
            </li>
            <% } else { %>
              <a  href="/user/login">
                <i class="fas fa-user me-3 icon-navBar"> </i>
                
              </a>
              <%} %>
              <li class="nav-item dropdown ">
                <a class="nav-link dropdown-toggle p-0 px-3 text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-cart-arrow-down"></i>
                </a>
                <div  id="carrito" class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <table id="lista-carrito" class="table">
                    <thead>
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

                <a href="#" id="vaciar-carrito" class="btn btn-danger btn-block">Vaciar </a>
                <a href="#" id="procesar-pedido" class="btn btn-success btn-block">Comprar</a>
                </div>
              </li>
              
           
          </div>
        </div>
         
      </div>
    </div>
  </nav>

  <nav class="navbar navbar-expand-lg navbar-light bg-purple py-3">
    <div class="container-fluid text-center">
      <div
        class="collapse navbar-collapse d-flex justify-content-center align-items-cente"
        id="navbarNav"
      >
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/products">TODOS LOS PRODUCTOS</a>
          </li>
          <%
          console.log(locals.categorias)
          if(locals.categorias) { %> 
            <% locals.categorias.forEach(category=>{%>
          <li class="nav-item">
            <a class="nav-link" href="/products/<%=category.name%>"><%=category.name%></a>
          </li>
         
          <%})
        }%>
        </ul>
      </div>
    </div>
  </nav>
  <% if(locals.rol) { %> 
  <nav class="navbar navbar-expand-lg navbar-dark bg-celeste">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav  ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/products/create">Crear Producto</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Listar productos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/list">Listar Usuarios</a>
          </li>
      </div>
    </div>
   
  </nav>
  <%}%>

  
</header>
