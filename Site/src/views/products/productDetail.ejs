<!DOCTYPE html>
<html lang="es">

<%-include("../partials/head", {title: "Detalle Producto", css:"productDetail.css"}) %>

<body>

    <%-include("../partials/header") %>

    <main>
        <section class="py-3">
            
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                                <li class="breadcrumb-item " aria-current="page"><a href="/products/<%= product.category.name %>"><%= product.category.name %></a></li>
                                <li class="breadcrumb-item " aria-current="page"><a href="/products/<%= product.category.name %>/<%= product.sexCategory.name %>"><%= product.sexCategory.name %></a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <div class="main-container">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8  d-flex justify-content-center align-items-center">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">

                            <div class="carousel-inner">
                                <% if(product.images.length > 0){
                                    product.images.forEach((element, i) => { %>
                                    <div class="carousel-item <%= (i == 0) ? 'active' : '' %>">
                                        <img src="/images/product/<%= element.name %>" class="d-block w-100" alt="...">
                                    </div>
                                    <% });
                                }%>

                                <% if(product.images.length == 0){ %>
                                    <div class="carousel-item active">
                                        <img src="/images/product/default-image.png" class="d-block w-100" alt="...">
                                    </div>
                                <% } %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <div class="product-description">
                            <p class="title"><%= product.name %></p>
                            <p>Item No. <%= product.idProduct %></p>


                            <% if(product.discount>0){%>    
                                    
                                <p class="price-discount">$ <%= product.price %></p>
                                <p class="price">$ <%= product.price-(product.discount* (product.price/100)) %></p>
                          
                                <%} 
                                else{%>  
                                    <p class="price">$ <%= product.price %></p>
                                 
                                    <%} %>



                            <!-- <p class="price">$ <%= product.price %></p> -->

                            <div class="size">
                            <ul class="size-ul">
                                <!-- <li class="size-li"><span>S</span> </li>
                                <li class="size-li"><span>M</span></li>
                                <li class="size-li"><span>L</span></li>
                                <li class="size-li"><span>XL</span></li>  -->



                    <% if(product.sizes.length > 0) { %>

                        <% product.sizes.forEach(size => { %> 
                                    <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="<%= product.sizes %>"  name="size">
                                    <label class="form-check-label" for="inlineCheckbox1"><%= size.name %></label>
                                    </div>
                        <% }) %> 

                       <% }else { %>

                            <p>No hay talles disponibles</p>

                        <% } %>
                                  <!-- <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="<%= product.sizes %>" name="size" disabled checked>
                                    <label class="form-check-label" for="inlineCheckbox2">M</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="<%= product.sizes %>" name="size" disabled checked>
                                    <label class="form-check-label" for="inlineCheckbox3">L</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="<%= product.sizes %>"  name="size" disabled checked >
                                    <label class="form-check-label" for="inlineCheckbox4">XL</label>
                                  </div>
                                  <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="<%= product.sizes %>"  name="size" disabled checked >
                                    <label class="form-check-label" for="inlineCheckbox4">XXL</label>
                                  </div> -->
                            </ul>
                        </div>




                            <a href="../products/cart" class="btn btn-primary"> Agregar al
                                carrito</a>
                        </div>
                        <div class="iconos my-5">
                            <p class="my-0">Compartilo vía</p>
                            <i class="fab fa-facebook me-2"></i>
                            <i class="fab fa-twitter me-2"></i>
                            <i class="fab fa-instagram"></i>

                        </div>
                        <div class="btn-editar-eliminar">
                            
                                <a href="../edit/<%= product.idProduct %>" class="btn btn-success"><i class="fas fa-edit"></i> EDITAR</a>
                            <form action="../delete/<%= product.idProduct %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> ELIMINAR</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="my-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 text-justify">
                        <p class="h4 text-center">Detalles</p>
                        <p><%= product.description %></p>
                    </div>
                    <!-- <div class="col-lg-6 text-justify">
                        <p class="h4 text-center">Especificaciones</p>
                        <ul>
                            <li> Material: 100% Algodón</li>
                            <li>Industria Argentina </li>
                        </ul>                           
                    </div> -->
                </div>
            </div>
        </section>
    </div>
    </main>

    <%-include("../partials/footer") %>


</body>

</html>