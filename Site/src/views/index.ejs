<!DOCTYPE html>
<html lang="es">

<%-include("./partials/head", {title: 'Inicio' , css:'index.css'}) %>
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />


    <body>


        <%-include("./partials/header") %>

            <main>
                <section>
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/portada_1.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="images/portada_2.jpg" class="d-block w-100" alt="...">
                            </div>

                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </section>
                <section id="ofertas">
                    <div class="container">
                        <div class="row my-3">
                            <% minimos.forEach((category)=>{ %>
                            <div class="col-lg-3 mb-3 text-center ">
                                <div class="bg-dark  p-3 ofert">
                                    <a href="/products/<%=category.category.name%>">
                                    <p class="h4 text-color text-white"><%=category.category.name%> </p>
                                    <p class="text-white text-color pric">desde $ <%=category.price%></p>
                                    </a>
                                </div>
                            </div>
                            <% })%>
                           
                        </div>
                    </div>
                </section>
                <!------------Lomasvendido------------------------------>
                <section id="lomasvendidos my-5">
                    <div class="container tendencias">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class=" h3 my-5">Tendencias</p>
                            </div>
                            <%products.forEach((listaProducto)=>{ %>
                                <%if(listaProducto.saleCategory.name == "Tendencia"){ %>
                                    <div class="col-lg-3 ">
                                        <div class="product">
                                            <a class="floa-end" href="#">
                                                <i class="fa fa-heart ps-2"></i>
                                            </a>
                                            <a href="products/detail/<%= listaProducto.idProduct %>">
                                                <%if(listaProducto.images.length>0){%>
                                                    <img src="/images/product/<%= listaProducto.images[0].name %>" class="card-img-top" alt="<%= listaProducto.name %>">
                                                    <%} else{ %>
                                                    <img src="/images/product/default-image.png" class="card-img-top" alt="imagen por defecto">
        
                                                        <%} %>
                                            </a>
                                            <a href="products/detail/<%= listaProducto.idProduct %>">
                                                <div class="">
                                                    <p class="title text-center"><%= listaProducto.name %></p>
                                                    <p class="price text-center">$ <%= listaProducto.price %></p>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <%} %>
                            <% }) %>

                                       
                        </div>
                    </div>
                </section>

                <!------------Lomasvendido------------------------------>
                <section id="lomasvendidos my-5">
                    <div class="container ofertas">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class=" h3 my-5">Ofertas</p>
                            </div>
                            <%products.forEach((listaProducto)=>{ %>
                                <%if(listaProducto.saleCategory.name == "Oferta"){ %>
                                    <div class="col-lg-3 pb-3">
                                        <div class="product">
                                            <a class="floa-end" href="#">
                                                <i class="fa fa-heart ps-2"></i>
                                            </a>
                                            <a href="products/detail/<%= listaProducto.idProduct %>">
                                                <%if(listaProducto.images.length>0){%>
                                                    <img src="/images/product/<%= listaProducto.images[0].name %>" class="card-img-top" alt="<%= listaProducto.name %>">
                                                    <%} else{ %>
                                                    <img src="/images/product/default-image.png" class="card-img-top" alt="imagen por defecto">
        
                                                        <%} %>
                                            </a>
                                            <% if(listaProducto.discount>0){%>
                                                   <div class="discount">
                                                <p><%= listaProducto.discount %>%</p>
                                                   </div>
                                            <%} %>
                                            <a href="products/detail/<%= listaProducto.idProduct %>">
                                                <div class="">
                                                    <p class="title text-center"><%= listaProducto.name %></p>
                                                    <% if(listaProducto.discount>0){%>
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <p class="price text-center">$ <%= listaProducto.price-(listaProducto.discount* (listaProducto.price/100)) %></p>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <p class="price-discount text-center">$ <%= listaProducto.price %></p>
                                                        </div>
                                                    </div>

                                                    <%} 
                                                    else{%>  
                                                        <p class="price text-center">$ <%= listaProducto.price %></p>
                                                     
                                                        <%} %>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <%} %>
                            <% }) %>
                        
                        </div>
                    </div>
                </section>
            </main>


        <div class="button-end" >
            <button type="button" class="boton" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                
                <i class="far fa-comments-alt icon-mesage"></i>
  </button>
        </div>
    
  
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content modal-pos">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Contactanos</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">



          <form class="formularioPerfil"  action="https://formspree.io/f/mgedbdwy"
                          method="POST">

           

            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Nombre y Apellido</label>
              <input type="text" name="Nombre" class="form-control" id="exampleFormControlInput1" >

            </div>

            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Email </label>
              <input type="email" name="Email" class="form-control" id="exampleFormControlInput1" >
            </div>

            <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label ">Mensaje </label>
            
            <textarea name="message" id="exampleFormControlInput1" class="form-control text-edit" cols="2" rows="2"></textarea>
            </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
      </div>
    </div>
  </div>
</form>

            <%-include("./partials/footer") %>
             <script src="/js/pedido.js"></script>



    </body>

</html>